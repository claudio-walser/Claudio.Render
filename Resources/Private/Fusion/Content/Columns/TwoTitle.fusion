##
# "TwoColumn" element
#
prototype(Claudio.Render:Content.Columns.TwoTitle) < prototype(Neos.Neos:ContentComponent) {
    column0 = Neos.Neos:ContentCollection {
        nodePath = 'column0'
    }

    column1 = Neos.Neos:ContentCollection {
        nodePath = 'column1'
    }

    renderer = afx`
        <div class="row">
            <div class="col-sm-3 animate-box">{props.column0}</div>
            <div class="col-sm-9 animate-box">{props.column1}</div>
        </div>
    `
}
